
@model IEnumerable<Tarea2JonathanRojas.Models.Servicio> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Servicios</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="ServicioController1">Agregar Servicio</a>
        </div>

    </div>

    <div class="row">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Id)</td>
                            <td>@Html.DisplayNameFor(m => m.NombreServicio)</td>
                            <td>@Html.DisplayNameFor(m => m.Tipo)</td>
                            <td>@Html.DisplayNameFor(m => m.Unidad)</td>
                            <td>@Html.DisplayNameFor(m => m.Empresa)</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NombreServicio</td>
                                <td>@item.Tipo</td>
                                <td>@item.Unidad</td>
                                <td>@item.Empresa</td>
                                <td>
                                    <a asp-controller="ServicioController1" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                    <a asp-controller="ServicioController1" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else 
            {
                <p>No existen datos</p>
            }
        </div>

</div>

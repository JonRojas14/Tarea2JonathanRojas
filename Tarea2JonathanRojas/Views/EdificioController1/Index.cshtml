@model IEnumerable<Tarea2JonathanRojas.Models.Edificio> //establece sobre que modelo se esta trabajando

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container"> <!--Construccion de la vista con bootstrap que viene instalado por defecto en asp.net core MMVC-->

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Edificios</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="EdificioController1">Agregar Edificio</a>
        </div>

    </div>

    <div class="row">
            @if (Model.Count() > 0) //comprueba si hay registros
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <!--m es una expresion lambda-->
                            <td>@Html.DisplayNameFor(m => m.Id)</td>
                            <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                            <td>@Html.DisplayNameFor(m => m.Capacidad)</td>
                            <td>@Html.DisplayNameFor(m => m.FechaAdquisicion)</td>
                            <td>@Html.DisplayNameFor(m => m.Provincia)</td>
                            <td>@Html.DisplayNameFor(m => m.Canton)</td>
                            <td>@Html.DisplayNameFor(m => m.Distrito)</td>
                            <td>@Html.DisplayNameFor(m => m.Tipo)</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombre</td>
                                <td>@item.Capacidad</td>
                                <td>@item.FechaAdquisicion</td>
                                <td>@item.Provincia</td>
                                <td>@item.Canton</td>
                                <td>@item.Distrito</td>
                                <td>@item.Tipo</td>
                                <td>
                                    <a asp-controller="EdificioController1" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                    <a asp-controller="EdificioController1" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else 
            {
                <p>No existen datos</p>
            }
        </div>

</div>


@model Tarea2JonathanRojas.Models.ServPorEdif 

@{
    ViewData["Title"] = "Editar Servicios de edificio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Servicio</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                   <label asp-for="NombreEdificio" class="control-label" ></label>
                   <input asp-for="NombreEdificio" class="form-control" readonly/>
                   <span asp-validation-for="NombreEdificio" class="text-danger"></span>
                </div>

                  <div class="form-group">
                        <label asp-for="Servicios" class="control-label" ></label>
                        <span asp-validation-for="Servicios" class="text-danger"></span>
                        <select asp-for="Servicios" asp-items="@Model.ServEdifTipo" >
                            <option selected="selected">Por favor seleccione un Servicio</option>
                        </select>
                  </div>


                  <div class="form-group">
                        <label asp-for="EmpresaServicio" class="control-label" ></label>
                        <span asp-validation-for="EmpresaServicio" class="text-danger"></span>
                        <select asp-for="EmpresaServicio" asp-items="@Model.ServEdifEmpresa" >
                         <option selected="selected">Por favor seleccione una empresa</option>
                        </select>
                  </div>

                 <div class="form-group">
                        <label asp-for="FechaAdquisicion" class="control-label" ></label>
                        <input asp-for="FechaAdquisicion" class="form-control" value="" asp-items="@Model.ServEdifFecha" />
                        <span asp-validation-for="FechaAdquisicion" class="text-danger"></span>
                 </div>

                <div class="form-group">
                    <input type="submit" value="Editar registro de servicios del edificio" class="btn btn-primary" />
                </div>

            </form>
        </div> 
    </div>

</div>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" />}

}
